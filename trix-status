import logging

from trix_status import utils
from trix_status.status import TrixStatus

if __name__ == "__main__":
    arguments = utils.parse_arguments()
    log = logging.getLogger('trix_status')
    log.setLevel(arguments.loglevel)

    nodes = utils.get_nodes()
    TrixStatus(nodes, verbose=arguments.verbose).get()

